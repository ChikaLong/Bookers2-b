<div class="container px-5 px-sm-0">

  <!--部分テンプレ-->
  <%= render 'books/error',book: @book %>

  <div class="row">

    <!--部分テンプレ-->
    <%= render 'books/book',book: @book,user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>

         <tbody>
          <% @user.books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
               <%= attachment_image_tag @user, :profile_image, :fill,40,40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
              <%end%>
            </td>
            <td>
              <%= link_to book_path(book) do %>
               <%= book.title %>
              <%end%>
            </td>
            <td><%= book.body %></td>
            <td>コメント数:<%= book.book_comments.count %></td>
          <%end%>
          </tr>
        </tbody>
      </table>

      <div class="table_width">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>今日の投稿数</th>
              <th>前日の投稿数</th>
              <th>前日比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @today_book.count %></td>
              <td><%= @yesterday_book.count %></td>
              <td>
                <% if @yesterday_book.count == 0 %>
                  前日の投稿はありません
                <%else%>
                  <% @the_day_before = @today_book.count / @yesterday_book.count.to_f %>
                  <%= (@the_day_before * 100).round %>%
                <%end%>
              </td>
            </tr>
          </tbody>

          <thead>
            <tr>
              <th>今週の投稿数</th>
              <th>前週の投稿数</th>
              <th>前週比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @week_book.count %></td>
              <td><%= @lastweek_book.count %></td>
              <td>
                <% if @lastweek_book.count == 0 %>
                  前週の投稿はありません
                <%else%>
                  <% @the_week_before = @week_book.count / @week_book.count.to_f %>
                  <%= (@the_week_before * 100).round %>%
                <%end%>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>


